"" Map leader to ,
let mapleader=','

" nnoremap <leader>rr :source ~/.ideavimrc<CR>
nnoremap \r :action IdeaVim.ReloadVimRc.reload<CR>
nnoremap \e :e ~/.ideavimrc<CR>

"" command setting
set showmode
set scrolloff=5
set showcmd
set visualbell
set clipboard+=unnamed
set history=200

set hlsearch
set incsearch
set ignorecase
set smartcase

" Search for selected text.
xnoremap * "zy/<C-R>z<CR>
xnoremap # "zy?<C-R>z<CR>

"" Idea settings
set selectmode=ideaselection
set ideajoin
set ideastatusicon=gray
set idearefactormode=keep
set ideamarks

" Plugin
set multiple-cursors
set easymotion
set NERDTree

" Don't use Ex mode
map Q gq

" 순수 vim 설정
"" easy system clipboard copy/paste
noremap y "*y
noremap Y "*Y
noremap p "*p
noremap P "*P

"" Switch windows
nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l

vnoremap < <gv
vnoremap > >gv

nnoremap <leader><space> :nohlsearch<CR>

nnoremap H ^
nnoremap L $
vnoremap H ^
vnoremap L $

map U <C-R>

" ideavim 설정
"" Plugin Mappings
""" jetbrains plugin + vim plugin
"" AceJump + ideaVim-easymotion
map <leader>f <Plug>(easymotion-s)
map <leader>e <Plug>(easymotion-f)

""" vim plugin
"" NERDTree
nnoremap <silent> <F2> :NERDTreeFind<CR>
nnoremap <silent> <F3> :NERDTreeToggle<CR>

""" jetbrains plugin
map <leader>jh <Action>(ActivateJsonHelperToolWindow)

"" 화면 분할
map <leader>h <Action>(SplitHorizontally)
map <leader>v <Action>(SplitVertically)

"" IDE Actions
"
map \p <Action>(ParameterInfo)
map <A-F4> <Action>(CloseProject)
nmap <F10> <Action>(ExportSettings)
nmap <F11> <Action>(ImportSettings)

" Navigation Tab
map <Tab> <Action>(NextTab)
map <S-Tab> <Action>(PreviousTab)

map <S-Space> <Action>(ShowErrorDescription)

" git
map <leader>a <Action>(Annotate)
map <leader>gh <Action>(Vcs.ShowTabbedFileHistory)
map <leader>o <Action>(FileStructurePopup)
map <leader>q <Action>(QuickJavaDoc)
map <leader>r <Action>(RenameElement)

""
"" 문 이동
nmap <A-Up> <Action>(MoveStatementUp)
nmap <A-Down> <Action>(MoveStatementDown)
imap <A-Up> <Action>(MoveStatementUp)
imap <A-Down> <Action>(MoveStatementDown)
vmap <A-Up> <Action>(MoveStatementUp)
vmap <A-Down> <Action>(MoveStatementDown)

"" 줄 이동
nmap <A-k> <Action>(MoveLineUp)
nmap <A-j> <Action>(MoveLineDown)
vmap <A-k> <Action>(MoveLineUp)
vmap <A-j> <Action>(MoveLineDown)

" vim
sethandler <C-A> a:vim
sethandler <C-D> a:vim
sethandler <C-F> a:vim

sethandler <C-B> a:vim

sethandler <C-H> a:vim
sethandler <C-J> a:vim
sethandler <C-K> a:vim
sethandler <C-L> a:vim

sethandler <C-R> n:vim

sethandler <C-V> a:vim

" ide
sethandler <C-G> a:ide

sethandler <C-T> a:ide

" misc
sethandler <C-2> a:ide
sethandler <C-E> a:ide
sethandler <C-I> a:ide
sethandler <C-M> a:ide
sethandler <C-N> a:ide
sethandler <C-O> a:ide
sethandler <C-P> a:ide
sethandler <C-S> a:ide
sethandler <C-6> a:ide
sethandler <C-S-2> a:ide
sethandler <C-S-6> a:ide
sethandler <C-w> a:ide
